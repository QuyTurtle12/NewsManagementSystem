@model Repositories.DTOs.SystemAccountDTOs.GetSystemAccountDTO
@using System.Security.Claims

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<div>
    <h4>SystemAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>
</div>

<button type="button" class="btn btn-warning" onclick="loadEditForm(@Model.AccountId)">Edit</button>
@* <a asp-action="Index" class="btn btn-secondary">Back</a> *@
<a id="backLink" class="btn btn-secondary">Back</a>

<!-- Modal for Edit Form -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editFormContainer">
                <!-- Edit form will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEditForm(id) {
            $.get('/SystemAccounts/Edit/' + id, function (data) {
                $('#editFormContainer').html(data);
                $('#editModal').modal('show');
            });
        }
    </script>

    <script>

        $(document).ready(function () {
        function decodeJwt(token) {
                var base64Url = token.split('.')[1];
        var base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
        var jsonPayload = decodeURIComponent(atob(base64).split('').map(function(c) {
                    return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
                }).join(''));
        return JSON.parse(jsonPayload);
            }

            var jwtToken = localStorage.getItem("jwt_token");

            if (jwtToken) {
                var decodedToken = decodeJwt(jwtToken);
                var role = decodedToken["http://schemas.microsoft.com/ws/2008/06/identity/claims/role"];

                var backLink = document.getElementById("backLink"); // Get the "Back" link element by its ID

                if (backLink) {
                    if (role === "0") { // Admin
                        backLink.href = "/SystemAccounts/Index";
                    } else { // Non-admin
                        backLink.href = "/Home/Index";
                    }
                } else {
                    console.error("Back link element not found!"); // Handle the case where the element is missing
                }
            }
        });
    </script>
}

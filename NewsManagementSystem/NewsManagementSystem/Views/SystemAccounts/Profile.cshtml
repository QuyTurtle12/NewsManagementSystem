@model Repositories.DTOs.SystemAccountDTOs.GetSystemAccountDTO

@{
    ViewData["Title"] = "Profile";
}

<h1>Details</h1>

<div>
    <h4>SystemAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class = "col-sm-2">
            Role
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
    </dl>
</div>

<button type="button" class="btn btn-warning" onclick="loadEditForm(@Model.AccountId)">Edit</button>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

<!-- Modal for Edit Form -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editFormContainer">
                <!-- Edit form will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadEditForm(id) {
            $.get('/SystemAccounts/Edit/' + id, function (data) {
                $('#editFormContainer').html(data);
                $('#editModal').modal('show');
            });
        }
    </script>
}




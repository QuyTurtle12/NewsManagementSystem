@model Repositories.DTOs.SystemAccountDTOs.GetSystemAccountDTO

<form asp-action="Edit" method="post" id="editAccountForm">
    <input type="hidden" asp-for="AccountId" />

    <div class="form-group">
        <label asp-for="AccountName" class="control-label">Name</label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountEmail" class="control-label">Email</label>
        <input asp-for="AccountEmail" class="form-control" />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


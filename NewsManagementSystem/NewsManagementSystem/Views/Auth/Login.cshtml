@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Auth" asp-action="Login" method="post" id="loginForm">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="AccountEmail">Email</label>
        <input type="email" class="form-control" id="AccountEmail" name="AccountEmail" value="@Model?.AccountEmail" required />
    </div>
    <div class="form-group">
        <label for="AccountPassword">Password</label>
        <input type="password" class="form-control" id="AccountPassword" name="AccountPassword" required />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<!-- Display error message if it exists -->
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @ViewData["ErrorMessage"]
    </div>
}
